<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/textView_wholeScreen_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/button_allLists_settings"
        android:layout_width="201dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:text="Reset All Lists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_jobList_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Job List"
        app:layout_constraintBottom_toTopOf="@+id/button_stockList_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_allLists_settings"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/button_taxList_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Tax List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_othersList_settings" />

    <Button
        android:id="@+id/button_cryptoList_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Crypto List"
        app:layout_constraintBottom_toTopOf="@+id/button_othersList_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stockList_settings" />

    <Button
        android:id="@+id/button_othersList_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Others List"
        app:layout_constraintBottom_toTopOf="@+id/button_taxList_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cryptoList_settings" />

    <Button
        android:id="@+id/button_stockList_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Stock List"
        app:layout_constraintBottom_toTopOf="@+id/button_cryptoList_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_jobList_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>